?>
<?php get_header(); ?>
<h3 style="text-align: center"><i class="fa fa-sitemap"> Mappa del sito</i></h3>

	<form style="text-align: center" class="searchform" role="search" method="get" action="<?php echo esc_url( home_url( '/' ) ); ?>">
		<input type="text" class="field searchform-s" name="s" value="<?php echo esc_attr( get_search_query() ); ?>" placeholder="<?php _e( 'Digita e premi invio&hellip;', 'nametheme' ); ?>" />
		<input type="submit" class="searchsubmit" value="<?php esc_attr_e( 'Cerca', 'nametheme' ); ?>" />
		<a href="#go" class="submit"></a>
	</form><br />
  <?php endwhile; endif; ?>
  </div>
 
  <?php get_footer(); ?>
	
  <div id="content" class="page-content">  
  <?php if (have_posts()) : while (have_posts()) : the_post(); ?>
  	<div class="post" style="float:left;width:75%" id="post-<?php the_ID(); ?>"> 
		<h3><i class="fa icon-docs"> Articoli</i></h3>
        <ul style="list-style-type: circle">
          <?php $archive_query = new WP_Query('showposts=1000');
            while ($archive_query->have_posts()) : $archive_query->the_post(); ?>
          <li><a href="<?php the_permalink() ?>" rel="bookmark" title="Vai alla pagina <?php the_title(); ?>"><?php the_title(); ?></a></li>
          <?php endwhile; ?>
        </ul>		      
    </div>	
    <div class="post" style="float:left;width:25%" id="post-<?php the_ID(); ?>">    
        <h3><i class="fa icon-doc-text"> Pagine</i></h3>
        <ul style="list-style-type: circle">
          <?php wp_list_pages('title_li='); ?>
        </ul>
